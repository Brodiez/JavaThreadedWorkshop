  <display-name>Threaded_Project_Phase3_JSP</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <context-param>
    <param-name>driver</param-name>
    <param-value>com.mysql.jdbc.Driver</param-value>
  </context-param>
  <context-param>
    <param-name>conn</param-name>
    <param-value>jdbc:mysql://localhost:3306/travelexpert</param-value>
  </context-param>
  <servlet-mapping>  
        <servlet-name>login</servlet-name>  
        <url-pattern>/Login_Servlet</url-pattern>  
    </servlet-mapping>  
    <servlet-mapping>  
        <servlet-name>login</servlet-name>  
        <url-pattern>/Update_Customer</url-pattern>  
    </servlet-mapping>
</web-app>